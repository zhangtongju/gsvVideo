<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/smart_refresh_layout"
    android:layout_height="match_parent"
    android:background="@color/stroke_e2e6eb"
    android:focusableInTouchMode="true"
    android:splitMotionEvents="false">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:paddingLeft="@dimen/dp_2_5"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_2_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="ifContentScrolls" />


    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:srlAccentColor="@color/text_7d8496"
        app:srlClassicsSpinnerStyle="Translate"
        app:srlDrawableArrowSize="20dp"
        app:srlDrawableMarginRight="20dp"
        app:srlDrawableProgress="@mipmap/mall_shuaxin"
        app:srlDrawableProgressSize="20dp"
        app:srlDrawableSize="20dp"
        app:srlFinishDuration="500"
        app:srlPrimaryColor="@color/white"
        app:srlTextSizeTitle="16sp" />
</com.scwang.smartrefresh.layout.SmartRefreshLayout>

